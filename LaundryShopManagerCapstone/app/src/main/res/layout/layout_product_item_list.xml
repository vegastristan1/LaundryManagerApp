<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewProductItem"
        android:layout_width="412dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewProductItem"
        android:layout_width="121dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/_143_1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewProductItemCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost : "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="103dp" />

    <TextView
        android:id="@+id/textViewProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewProductItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Item Quantity"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="43dp" />

    <Button
        android:id="@+id/buttonEditProductItem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconGravity="top"
        tools:layout_editor_absoluteX="297dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/buttonDeleteProductItem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconGravity="top"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="85dp" />
</androidx.constraintlayout.widget.ConstraintLayout>