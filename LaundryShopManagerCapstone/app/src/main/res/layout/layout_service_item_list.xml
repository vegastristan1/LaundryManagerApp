<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewServiceItem"
        android:layout_width="412dp"
        android:layout_height="140dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewServiceItem"
        android:layout_width="121dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewServiceItem"
        app:layout_constraintEnd_toEndOf="@+id/viewServiceItem"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="@+id/viewServiceItem"
        app:layout_constraintTop_toTopOf="@+id/viewServiceItem"
        app:srcCompat="@drawable/_143_1" />

    <TextView
        android:id="@+id/textViewServiceItemCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="40dp"
        android:text="Cost : "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewServiceItem"
        app:layout_constraintEnd_toStartOf="@+id/buttonEditServiceItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewServiceItem"
        app:layout_constraintTop_toBottomOf="@+id/textViewServiceItemDesc"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/textViewServiceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Service Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/viewServiceItem"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/imageViewServiceItem"
        app:layout_constraintTop_toTopOf="@+id/viewServiceItem" />

    <TextView
        android:id="@+id/textViewServiceItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Item Description"
        app:layout_constraintEnd_toEndOf="@+id/viewServiceItem"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/imageViewServiceItem"
        app:layout_constraintTop_toBottomOf="@+id/textViewServiceName" />

    <Button
        android:id="@+id/buttonEditServiceItem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="156dp"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="@+id/viewServiceItem"
        app:layout_constraintStart_toEndOf="@+id/imageViewServiceItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <Button
        android:id="@+id/buttonDeleteServiceItem"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:icon="@drawable/ic_baseline_delete_24"
        app:iconGravity="top"
        app:layout_constraintBottom_toBottomOf="@+id/viewServiceItem"
        app:layout_constraintEnd_toEndOf="@+id/viewServiceItem"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toEndOf="@+id/buttonEditServiceItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />
</androidx.constraintlayout.widget.ConstraintLayout>